{
  "metadata": [
    {
      "src": [
        {
          "files": [ "**.csproj" ],
          "exclude": [ "**/bin/**", "**/obj/**" ],
          "src": "../src"
        }
      ],
      "dest": "api",
      "filter": "filterConfig.yml"
    }
  ],
  "build": {
   "content": [
      {
         "files": [ "api/**.md", "api/**.yml", "api/**/toc.yml" ]
      },
      {
         "files": [ "articles/**.md", "articles/**/toc.yml" ]
      },
      {
         "files": [ "contributing/**.md", "contributing/**/toc.yml" ]
      },
      {
         "files": [ "**.md", "toc.yml" ]
      }
   ],
    "resource": [
      {
         "files": [ "logo-small.png", "favicon.ico", "public/**" ]
      }
    ],
    "postProcessors": [ "ExtractSearchIndex" ],
    "globalMetadata": {
      "_enableSearch": "true",
      "_appTitle": "Blackwood.IO",
      "_appFaviconPath": "favicon.ico",
      "_appLogoPath": "logo-small.png",
      "_appFooter": "Copyright 2021-2025 Randall Maas",
      "_disableEdit": true,
      "_disableNavbar": true,
      "_disableBreadcrumb": true,
      "_disableHeader": true,
      "_disableContribution": true,
      "_disableToc": false
    },
    "dest": "../docs",
    "template": [
      "default",
      "modern",
      "template"
    ],
    "markdownEngineName": "markdig",
    "markdownEngineProperties": {
      "markdigExtensions": [
        "SmartyPants"
      ]
    }
  }
}
